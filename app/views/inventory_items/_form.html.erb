<%= form_with(model: inventory_item) do |form| %>
  <% if inventory_item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(inventory_item.errors.count, "error") %> prohibited this inventory_item from being saved:</h2>

      <ul>
        <% inventory_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <% form.label :name %>
    <%= form.text_field :name, class:"form-control", placeholder:"Name" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :upc_code, class:"form-control", placeholder:"UPC" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :quantity, class:"form-control", placeholder:"Quantity" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :category, class:"form-control", placeholder:"Category" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :description, class:"form-control", placeholder:"Description" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :status, class:"form-control", placeholder:"Status" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :date_of_arrival, class:"form-control", placeholder:"Date of Arrival" %>
  </div>

  <div class="field form-group">
    <%= form.label :available_locations %>
    <%#= form.collection_select(:inventory_item, :locations_id, Location.all, :id, :number)%>
    <%= select(:inventory_items, "locations_id", @locations.collect{|l|[l.floor+'-'+l.section++'-' +l.rack+'-'+l.number.to_s, l.id]},include_blank:true )%>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
