<p style="color: green"><%= notice %></p>

<h1>Warehouses</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
  <tr>
    <th>Name</th>
    <th>Address</th>

  </tr>
  </thead>

  <tbody>
  <% @warehouses.each do |item| %>

      <tr>
        <td><%= item.name %></td>
        <td><%= item.address %></td>
        <td><%= link_to 'Edit', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New warehouse", new_warehouse_path %>
